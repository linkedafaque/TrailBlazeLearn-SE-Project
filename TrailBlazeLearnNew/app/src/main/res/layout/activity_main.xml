<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LoginUsing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/trailBlazeImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/trailblazebg" />


    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GoogleBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="#416BC1"
        android:contentDescription="@string/todo"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/facebookbutton"
        android:paddingEnd="25dp"
        android:paddingStart="23dp"
        android:text="Continue with Facebook"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/GoogleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/todo"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/googlebutton"
        android:paddingEnd="36dp"
        android:paddingStart="35dp"
        android:text="Continue with Google"
        android:textColor="@android:color/white" />

</RelativeLayout>

